<h3>ユーザー情報</h3>

<% if user_signed_in? %>
  <div>
    <% if current_user.image.present? %>
      <%= image_tag current_user.image.variant(resize: "100x100") %>
    <% else %>
      <%= image_tag 'user_img.png', size: "100x100" %>
    <% end %>
  </div>
  <h4>名前：<%= current_user.name %></h4>
  <h4>メールアドレス：<%= current_user.email %></h4>
  <h4>プロフィール：<%= current_user.profile %></h4>
  <%= link_to "編集", edit_user_registration_path %> 
  <%= link_to "ログアウト", destroy_user_session_path, method: :delete %> 
  <%= link_to "プロフィール編集", users_edit_account_path, class: 'post' %> 
<% else %>
  <h2> 現在ログインしていません </h2>
  <%= link_to "ログイン", new_user_session_path, class: 'post' %> 
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %> 
<% end %>
