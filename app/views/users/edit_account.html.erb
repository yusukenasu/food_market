<div class="non_responsive_pages">
  <%= render "layouts/error_messages", model: @user %>
  <h2>プロフィール編集</h2>
  <div>
    <%= form_with model: @user, url: users_account_update_path, method: :patch do |f| %>
      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div>
        <%= f.label :profile %><br>
        <%= f.text_area :profile %>
      </div>
      <div>
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>
      <div>
        <%= f.submit "更新" %>
      </div>
    <% end %>
  </div>
</div>
