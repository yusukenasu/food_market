<div class="edit_user_page">
  <%= render "layouts/error_messages", model: @user %>
  <div class="edit_user_subtitle">プロフィール編集</div>
  <div class="edit_user_informations">
    <%= form_with model: @user, url: users_account_update_path, method: :patch do |f| %>
      <div>
        <%= f.label :name %><br>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div>
        <%= f.label :profile %><br>
        <%= f.text_area :profile, class: "profile_text_field" %>
      </div>
      <div>
        <%= f.label :image %><br>
        <%= f.file_field :image %>
      </div>
      <div>
        <%= f.submit "更新" %>
      </div>
    <% end %>
  </div>
</div>
