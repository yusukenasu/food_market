<% if user_signed_in? %>
  <div class="index_page">
    <div class="first_view_product_images_container">
      <% @random_products.limit(5).each do |product| %>
        <% if product.image.present? %>
          <%= link_to product do %>
            <% image_tag product.image.variant(resize: "100x100") %>
          <% end %>
        <% else %>
          <%= image_tag 'user_img.png', size: "100x100" %>
        <% end %>
      <% end %>
    </div>

    <div class="registration_container">
    <%= link_to "お気に入りの商品を登録する", new_product_path, class: "registration_new_product" %>
    </div>

    <div class="search_form">
      <%= form_with url: products_search_path, method: :get, local: true do |f| %>
        <%= f.text_field :word %>
        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
<% else %>
<div class="index_page">
  <div class="first_view_product_images_container">
    <% @random_products.limit(5).each do |product| %>
      <% if product.image.present? %>
        <%= link_to "#" do %>
          <% image_tag product.image.variant(resize: "100x100") %>
        <% end %>
      <% else %>
        <%= image_tag 'user_img.png', size: "100x100" %>
      <% end %>
    <% end %>
  </div>

  <div class="registration_container">
    <p><span><%= link_to "新規登録", new_user_registration_path %></span>または<span><%= link_to "ログイン", new_user_session_path %></span>してお気に入りの商品を探そう！</p>
  </div>

  <div class="search_form">
    <%= form_with url: products_search_path, method: :get, local: true do |f| %>
      <%= f.text_field :word %>
      <%= f.submit "検索" %>
    <% end %>
  </div>
</div>
<% end %>