<div class="index_title">
  〜商品開発チームのための美味しさ共有プラットフォーム〜
</div>
<% if user_signed_in? %>
  <div class="index_page">
    <div class="first_view_product_images_container">
      <% @random_products.first(5).each do |product| %>
        <% if product.image.present? %>
          <%= link_to product do %>
            <% image_tag product.image.variant(resize: "100x100") %>
          <% end %>
        <% else %>
          <%= image_tag 'user_img.png', size: "100x100" %>
        <% end %>
      <% end %>
    </div>
    <div class="registration_container">
      <%= link_to "チームメイトにシェアする", new_product_path, class: "registration_new_product" %>
    </div>
  </div>
  </br>
  <div class="first_view_product_images_container">
    <% @random_products.last(5).each do |product| %>
      <% if product.image.present? %>
        <%= link_to product do %>
          <% image_tag product.image.variant(resize: "100x100") %>
        <% end %>
      <% else %>
        <%= image_tag 'user_img.png', size: "100x100" %>
      <% end %>
    <% end %>
  </div>



<% else %>
<div class="index_page">
  <div class="first_view_product_images_container">
  <% if @random_products.present? %>
    <% @random_products.first(5).each do |product| %>
      <% if product.image.present? %>
        <%= link_to "#" do %>
          <% image_tag product.image.variant(resize: "100x100") %>
        <% end %>
      <% else %>
        <%= image_tag 'user_img.png', size: "100x100" %>
      <% end %>
    <% end %>
  <% end %>
  </div>
  <div class="registration_container">
    <p><span><%= link_to "新規登録", new_user_registration_path %></span>または<span><%= link_to "ログイン", new_user_session_path %></span>して商品情報をシェアしよう！
    </br>ゲストログインは<span><%= link_to 'こちら', users_guest_sign_in_path, method: :post, class: "login" %></span>！</p>
  </div>
</div>
<div class="first_view_product_images_container">
  <% @random_products.last(5).each do |product| %>
    <% if product.image.present? %>
      <%= link_to "#" do %>
        <% image_tag product.image.variant(resize: "100x100") %>
      <% end %>
    <% else %>
      <%= image_tag 'user_img.png', size: "100x100" %>
    <% end %>
  <% end %>
</div>
<% end %>

<p>以下、テストデータ削除用</p>
<% @products.each do |product| %>
  <table>
    <tr>
      <td>
        <%= product.name %>
        <%= button_to "削除", product, method: :delete %>
        <% if product.image.present? %>
          <%= image_tag product.image.variant(resize: "100x100") %>
        <% else %>
          <%= image_tag 'user_img.png', size: "100x100" %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>