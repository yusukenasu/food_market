<h1>New Product</h1>
    
<%= form_with model: @product do |f| %>
  <div class="product_information">
    <div>
      <%= f.label :商品名 %><br>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :製造メーカー %><br>
      <%= f.text_field :manufacturer %>
    </div>
    <div>
      <%= f.label :円・価格（税込） %><br>
      <%= f.text_field :price %>
    </div>
    <div>
      <%= f.label :カテゴリー %><br>
      <%= f.text_field :category %>
    </div>
    <div>
      <%= f.label :商品説明 %><br>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :image %><br/>
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.hidden_field :user_id, value: @user.id %>
    </div>
  </div>
  <div class="product_score">
    <div>
      <%= f.label :コスパ %><br>
      <%= f.number_field :point_of_reasonability %>
    </div>
    <div>
      <%= f.label :特徴的 %><br>
      <%= f.number_field :point_of_impression %>
    </div>
    <div>
      <%= f.label :味 %><br>
      <%= f.number_field :point_of_taste %>
    </div>
    <div>
      <%= f.label :リピート性 %><br>
      <%= f.number_field :point_of_repeatability %>
    </div>
    <div>
      <%= f.label :デザイン性 %><br>
      <%= f.number_field :point_of_design %>
    </div>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "戻る", 'javascript:history.back()' %>
