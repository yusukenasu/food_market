<div class="favorite_button">
  <% if product.favorited?(current_user) %>
    <%= link_to product_favorites_path(product), method: :delete, remote: true, data: {"turbolinks" => false} do %>
      <span style="color:orange; font-size: 10px;">★イイね！<%= amount_of_favorites_with_product(product) %></span>
    <% end %>
  <% else %>
    <%= link_to product_favorites_path(product), method: :post, remote: true, data: {"turbolinks" => false} do %>
      <span style="color:lightgray; font-size: 10px;">★イイね！<%= amount_of_favorites_with_product(product) %></span>
    <% end %>
  <% end %>
</div>
