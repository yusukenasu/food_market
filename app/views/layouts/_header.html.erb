<div class="header_container">
  <nav class="navbar">
    <div class="logo_search_container">
      <div class="title_logo">
        <%= link_to 'Tasty Network', products_path %>
      </div>
      <div class="search_form">
        <%= form_with url: products_search_path, method: :get, local: true do |f| %>
          <%= f.text_field :word %>
          <%= f.submit "検索" %>
        <% end %>
      </div>
    </div>
    <% if user_signed_in? %>
      <div class="dropdown">
        <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
          <div>
            <% if current_user.image.present? %>
              <%= image_tag current_user.image, class: "user_image"%>
            <% else %>
              <%= image_tag 'user_img.png', size: "30x30" %>
            <% end %>
          </div>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <div class="user_name">
            <%= current_user.name %>
          </div>
          <button class="dropdown-item" type="button"><%= link_to "マイページ", users_home_path %></button>
          <button class="dropdown-item" type="button"><%= link_to "プロフィール編集", users_edit_profile_path %></button>
          <button class="dropdown-item" type="button"><%= link_to "アカウント設定変更", edit_user_registration_path %></button>
          <button class="dropdown-item" type="button"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
        </div>
      </div>
    <% else %>
    <% end %>
  </nav>
</div>
