<div class="firstview_middle_container">
  <div>
    <%= image_tag "firstview_arrow1_image.png", class: "firstview_middle_container_image" %>
  </div>
  <div class="firstview_product_images_container">
    <% if random_products.present? %>
      <% random_products.limit(4).each do |product| %>
      <div class="firstview_product_image_box"> 
        <% if user_signed_in? %> 
          <%= link_to product_path(product) do %>
            <% image_tag product.image, class: "firstview_product_image" %>
          <% end %>
        <% else %>
          <%= image_tag product.image, class: "firstview_product_image" %>
        <% end %>
      </div>
      <% end %>
    <% else %>
    <% end %>
  </div>
  <div>
    <%= image_tag "firstview_arrow2_image.png", class: "firstview_middle_container_image" %>
  </div>
</div>
